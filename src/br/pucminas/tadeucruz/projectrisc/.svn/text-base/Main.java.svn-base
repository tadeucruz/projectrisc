private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton3ActionPerformed
// TODO add your handling code here:
    JOptionPane.showMessageDialog(this, "Favor somente fornecer o nome do arquivo sem extensão");
    final JFileChooser fc = new JFileChooser();
    int res = fc.showSaveDialog(this);
    if (res == JFileChooser.APPROVE_OPTION) {
        File a = fc.getSelectedFile();
        if (jTextArea1.getText().equals("") || jTextArea3.getText().equals("") || jTextArea4.getText().equals("")) {
            JOptionPane.showMessageDialog(this, "Não tem conteudo para ser salvo");
        } else {
            try {
                BufferedWriter asm = new BufferedWriter(new FileWriter(a.getAbsoluteFile() + ".asm"));
                asm.write(jTextArea1.getText());
                asm.close();
                BufferedWriter maq = new BufferedWriter(new FileWriter(a.getAbsoluteFile() + ".maq"));
                maq.write(jTextArea3.getText());
                maq.close();
            } catch (IOException ex) {
            }

        }
    }
}//GEN-LAST:event_jButton3ActionPerformed

private void jMenuItem1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jMenuItem1ActionPerformed
// TODO add your handling code here:
    final JFileChooser fc = new JFileChooser();
    int res = fc.showOpenDialog(this);
    if (res == JFileChooser.APPROVE_OPTION) {
        File arq = fc.getSelectedFile();
        try {
            BufferedReader in = new BufferedReader(new FileReader(arq.getAbsoluteFile()));
            String linha = in.readLine();
            String a = "";
            while (linha != null) {
                a = a + linha + "\n";
                linha = in.readLine();
            }
            jTextArea1.setText(a);
        } catch (Exception ex) {
        }

    }
}//GEN-LAST:event_jMenuItem1ActionPerformed

