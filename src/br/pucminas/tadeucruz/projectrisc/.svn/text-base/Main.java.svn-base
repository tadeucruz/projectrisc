    private void atualizaRegistradores() {
        jLabel20.setText(Integer.toString(r.getFlags().getNeg()));
        jLabel21.setText(Integer.toString(r.getFlags().getZero()));
        jLabel22.setText(Integer.toString(r.getFlags().getCarry()));
        jLabel23.setText(Integer.toString(r.getFlags().getNegZero()));
        jLabel24.setText(Integer.toString(r.getFlags().getOverflow()));
    }

    private void zerarTudo() {
        r.getMemoria().setReg00("0000");
        r.getMemoria().setReg01("0000");
        r.getMemoria().setReg02("0000");
        r.getMemoria().setReg03("0000");
        r.getMemoria().setReg04("0000");
        r.getMemoria().setReg05("0000");
        r.getMemoria().setReg06("0000");
        r.getMemoria().setReg07("0000");
        r.getMemoria().limparMemoria();
    }

private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed
// TODO add your handling code here:

    if (instrucoes.size() == 0) {
        JOptionPane.showMessageDialog(this, "Não contem intruções para ser executadas");
    } else if (controlePC == -1) {
        JOptionPane.showMessageDialog(this, "Todas Intruções executadas");
    } else {
        if (jRadioButton1.isSelected()) {
            try {
                r.IF(jTextPC.getText());
            } catch (Exception ex) {
                JOptionPane.showMessageDialog(this, ex.getMessage());
            }
            atualizarMemoria();
            atualizaRegistradores();
            controlePC++;
            if (controlePC != instrucoes.size()) {
                if (r.jumpRC != -1) {
                    controlePC = r.jumpRC;
                    jTextPC.setText(instrucoes.get(controlePC));
                    r.jumpRC = -1;
                } else {
                    jTextPC.setText(instrucoes.get(controlePC));
                }
            } else {
                controlePC = -1;
            }
        } else if (jRadioButton2.isSelected()) {
            while (controlePC != -1) {
                try {
                    r.IF(jTextPC.getText());
                } catch (Exception ex) {
                    JOptionPane.showMessageDialog(this, ex.getMessage());
                }
                atualizarMemoria();
                atualizaRegistradores();
                controlePC++;
                if (controlePC == instrucoes.size()) {
                    controlePC = -1;
                }
                if (r.jumpRC != -1) {
                    controlePC = r.jumpRC;
                    jTextPC.setText(instrucoes.get(controlePC));
                    r.jumpRC = -1;
                } else if (controlePC != -1) {
                    jTextPC.setText(instrucoes.get(controlePC));
                }
            }
        }
    }

}//GEN-LAST:event_jButton2ActionPerformed

