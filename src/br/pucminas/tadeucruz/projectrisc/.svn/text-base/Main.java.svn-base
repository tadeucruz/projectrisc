private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
    try {
// TODO add your handling code here:
        instrucoes.clear();
        l.convert(jTextArea1.getText());
        controlePC = 0;
        instrucoes = l.getInstrucoes();
        String conteudo = "";
        String conteudoBIN = "";
        for (int i = 0; i < instrucoes.size(); i++) {

            conteudo = conteudo + i + " " + instrucoes.get(i) + "\n";
            conteudoBIN = conteudoBIN + i + " " + r.gambiara(Integer.toBinaryString(Integer.valueOf(instrucoes.get(i), 16))) + "\n";
        }
        jTextArea3.setText(conteudo);
        jTextArea4.setText(conteudoBIN);
        } catch (Exception ex) {//GEN-LAST:event_jButton1ActionPerformed
            instrucoes.clear();
            controlePC = 0;
            JOptionPane.showMessageDialog(this, ex.getMessage());
        //System.out.println(ex.getCause());
        }
        zerarTudo();
        atualizarMemoria();

    }

